<Window x:Class="Tipos_de_Inventarios.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tipos_de_Inventarios"
        mc:Ignorable="d"
        Title="MainWindow" Height="310" Width="1030" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Horizontal">
            
            <GroupBox Header="Sistema De Inventario Periodico" Margin="5">
                <StackPanel Margin="10">
                    <DataGrid x:Name="DetalleDataGrid1" Height="214"></DataGrid>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Sistema De Inventario Perpetuo" Margin="5">
                <StackPanel Margin="10">
                    <DataGrid x:Name="DetalleDataGrid2" Height="214"></DataGrid>
                </StackPanel>
            </GroupBox>
            
        </StackPanel>
    </Grid>
</Window>
